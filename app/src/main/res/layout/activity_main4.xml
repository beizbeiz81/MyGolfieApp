<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.howeilongct0289083.mygolfieapp.Main4Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@drawable/background5"
        android:src="@drawable/background5"
        app:srcCompat="@drawable/background5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/time"
            android:gravity="right"
            android:padding="20dp"
            android:text="My Golf Timer"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:layout_above="@+id/start"
            android:layout_alignEnd="@+id/cancel"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="90dp"
            android:gravity="top|right"
            android:padding="5dp"
            android:text="How Far Your Balls Fly In 1 Minute?"
            android:textColor="@android:color/black"
            android:textSize="24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/start"
        android:layout_below="@+id/linearLayout"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="60dp"
        tools:text="60" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:padding="20dp"
        android:text="Start" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/time"
        android:layout_marginEnd="18dp"
        android:background="@android:color/holo_green_light"
        android:padding="20dp"
        android:text="Cancel" />

</RelativeLayout>
